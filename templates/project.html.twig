{% extends 'base.html.twig' %}


{% block title %}
    {{ thisprojectname }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
          integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
{% endblock %}


{% block topbuttons %}
    <a class="btn btn-dark" href="{{ path('app_mainscreen') }}">Back</a>
{% endblock %}



{% block body %}
    <div class="container justify-content-center" id="LocalProject">
    <div class="row justify-content-center m-5">
        <div class="col-lg-11 d-flex align-items-center flex-column rounded dark">
            <div class="row border-bottom border-dark py-3">
                <div class="col-md my-4 ">
                    <h1 class="text-light">{{ thisprojectname }}</h1>
                </div>
            </div>

            <div class="row pt-2">
                <div class="col-md mt-4 ">
                    <h3 class="text-light">Total amount of time: {{ totalhours }}</h3>
                </div>
            </div>


            <div class="row mx-5 my-2">
                <div class="col-md">
                    {% if hours is empty %}
                    {% else %}
                        <table class="table table-hover table-dark table-striped table-borderless mt-4 rounded ">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Starting time</th>
                                <th scope="col">End time</th>
                                <th scope="col">Duration</th>
                                <th scope="col">Processed</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Modify</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for h in hours %}

                                <tr>

                                    <th class="text-center" scope="row">{{ loop.index }}</th>
                                    <td class="text-center">{{ h.timestampStart | format_datetime('short', 'short', locale='en') }}</td>
                                    <td class="text-center">{{ h.timestampEnd | format_datetime('short', 'short', locale='en') }}</td>

                                    <td class="text-center">{{ h.entryDuration }}</td>

                                    <td class="text-center">
                                        {% if h is defined %}
                                            <i class="fas fa-check"></i>
                                        {% else %}
                                            <i class="fas fa-times"></i>
                                        {% endif %}
                                    </td>

                                    <td class="text-center">
                                        <a class="btn btn-danger btn-sm align-self-center"
                                           href="{{ path('app_hour_delete', {projectName:thisprojectname, hoursId: h.id}) }}">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>

                                    <td class="text-center">
                                        <a class="btn btn-info btn-sm"
                                           href="{{ path('app_projectHourMod', {pjn: thisprojectname, hkey: h.id}) }}">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
            <div class="row top-bar d-flex flex-row-reverse mt-2">
                <a class="btn btn-info" href="{{ path('app_projectNameMod', {pjn: thisprojectname}) }}">Modify name</a>
            </div>

            <div class="row py-3">
                <div class="col-md">
                    <a class="btn btn-info" href={{ path('app_newHours', {project: thisprojectname} ) }}>Add hours</a>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md">
                    <a class="btn btn-danger" href={{ path('app_delete', {projectName: thisprojectname} ) }}>  Delete project</a>
                </div>
            </div>


        </div>
    </div>
{% endblock %}