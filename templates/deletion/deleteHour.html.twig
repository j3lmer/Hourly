{% extends 'base.html.twig' %}

{% block title %}Are you sure?{% endblock %}

{% block topbuttons %}
    <a class="btn btn-dark" href="{{ path('app_project', {projectId: projectId}) }}">Back</a>
{% endblock %}


{% block body %}


    <div class="container">
        <div class="row d-flex justify-content-center rounded mt-5 dark">
            <div class="col-md d-flex justify-content-center my-5">
                <div class="row">
                    <div class="col-md">
                        <h1 class="text-light">Are you sure you want to delete this hour entry?</h1>
                        <div class="col-md align-self-center">
                            <h3 class="yellow">{{ hour.timestampStart | format_datetime('full', 'short', locale='en') }}</h3>
                            <h4 class="text-light">Until</h4>
                            <h3 class="yellow">{{ hour.timestampEnd | format_datetime('full', 'short', locale='en') }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row d-flex justify-content-center rounded">
            <div class="col-md d-flex justify-content-center my-5">
                <div class="row">
                    <div class="col-md">
                        <a class="btn btn-danger btn-lg text-light"
                           href="{{ path('app_hour_deleted', {projectId: projectId, hoursId: hour.id}) }}">yes</a>
                    </div>
                    <div class="col-md">
                        <a class="btn bg-secondary btn-lg text-light"
                           href="{{ path('app_project', {projectId: projectId}) }}">no</a>
                    </div>
                </div>
            </div>
        </div>


    </div>

{% endblock %}
